<%= @survey.title %>

<form action="/take_survey" method="POST">
  <% @questions.each do |question|%>
    <div>
      <%= question.title %><br>
       <% question.all_choices.each do |choice|%>
          <input type="radio" name="<%=question.id%>" value="<%= choice.id %>"><%=choice.title%><br>
       <% end %><br>
    </div>
  <% end %>
  <input type="submit" value="submit" class="btn">
</form>
