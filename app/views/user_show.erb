<div class="container">

  <h2 class = "intro">Welcome <%= @user.name %>!</h2>

<h3>All Surveys</h3>
  <% @surveys.each do |survey| %>
    <p>
      <a href="/surveys/<%= survey.id %>">
          <%= survey.title %>
      </a>
    </p>
  <% end %>

  <h3>My Surveys</h3>
  <% @user_surveys.each do |survey| %>
    <p>
      <a href="/surveys/<%= survey.id %>">
          <%= survey.title %>
      </a>
    </p>
  <% end %>

  <form action="/logout" method="post">
    <input type="submit" value="Logout" class="btn">
  </form>

</div>
